<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="pictureOfDay"
            type="com.example.asteroidradar.domain.PictureOfTheDay" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_picture_of_the_day"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            imageUrl="@{pictureOfDay.url}"
            app:srcCompat="@drawable/placeholder_picture_of_day" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            style="@style/header"
            android:textSize="20sp"
            android:background="@color/black"
            android:paddingBottom="10dp"
            app:pictureText="@{pictureOfDay.description}"
            app:layout_constraintTop_toBottomOf="@+id/iv_picture_of_the_day"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
